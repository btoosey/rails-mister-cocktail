<%= link_to '< Back', cocktails_path %>
<h1><%= @cocktail.name %></h1>

<h2>Recipe</h2>
<ul>
<% @cocktail.doses.each do |dose| %>
  <li>
    <%= "#{dose.description} #{dose.ingredient.name}" %>
    <%= link_to "Delete", dose_path(dose), method: :delete, data: { confirm: "Delete Dose?" } %>
  </li>
<% end %>
</ul>

<%= link_to 'Add a Dose', new_cocktail_dose_path(@cocktail) %>

