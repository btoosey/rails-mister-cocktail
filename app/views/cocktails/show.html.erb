<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path @cocktail.photo, height: 300, width: 400, crop: :fill %>);">
  <div class="container", style="width: 800px">
    <h1 class="cocktail-name"><%= @cocktail.name %></h1>
    <%= link_to '< Back', cocktails_path %>
  </div>
</div>

<div class="container", style="width: 800px">


  <h2>Recipe</h2>
  <ul>
  <% @cocktail.doses.each do |dose| %>
    <li>
      <%= "#{dose.description} #{dose.ingredient.name}" %>
      <%= link_to "Delete", dose_path(dose), method: :delete, data: { confirm: "Delete Dose?" } %>
    </li>
  <% end %>
  </ul>

  <%= simple_form_for([@cocktail, @dose]) do |f| %>
    <%= f.input :description %>
    <%= f.association :ingredient %>
    <%= f.submit "Submit" %>
  <% end %>
</div>
