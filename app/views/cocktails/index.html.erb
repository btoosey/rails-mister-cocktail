<div class="banner" style="margin-bottom: 24px; box-shadow: 0 0 16px rgba(0,0,0,0.5); background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1509807995916-c332365e2d9e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2171&q=80)")>
  <div class="container", style="width: 900px">
    <h1>Mix It Up</h1>
    <h2>Add your favourite drink <u>recipes</u> to save them for your next <u>cocktail party</u></h2>
  </div>
</div>
<div class="container", style="width: 900px">
  <div class="cocktail-grid">
    <% @cocktails.each do |cocktail| %>
      <%= link_to cocktail_path(cocktail) do%>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path cocktail.photo, height: 450, width: 300 %>)">
          <%= cocktail.name %>
        </div>
      <% end %>
    <% end %>
    <div class="add-cocktail">
      <%= link_to  new_cocktail_path do%><i class="far fa-plus-square" style="color: rgba(256, 256, 256, 0.1);"></i><% end %>
  </div>
</div>
